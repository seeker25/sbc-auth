{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>bcgov/renovate-config"
  ],
  "automerge": false,
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchManagers": ["poetry", "dockerfile"],
      "postUpdateOptions": ["poetryLockUpdate"]
    },
    {
      "matchFileNames": ["auth-api/**", "queue_services/account-mailer/**", "queue_services/auth-queue/**"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "auth-api and dependents non-major updates",
      "additionalBranchPrefix": "auth-api-"
    },
    {
      "matchFileNames": ["auth-web/**"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "auth-web non-major updates",
      "additionalBranchPrefix": "auth-web-"
    },
    {
      "matchFileNames": ["jobs/**"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "jobs non-major updates",
      "additionalBranchPrefix": "jobs-"
    },
    {
      "matchFileNames": ["status-api/**"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "status-api non-major updates",
      "additionalBranchPrefix": "status-api-"
    },
    {
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "breaking"]
    },
    {
      "matchDepTypes": ["devDependencies"],
      "groupName": "dev dependencies"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["dependencies", "security"],
    "schedule": ["at any time"]
  }
}
